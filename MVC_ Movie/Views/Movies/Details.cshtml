<div>Customer: @Model.Customer.Name</div>*@
<div class="card" style="width: 16rem; ">
    <img src="@Model.PicUrl">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Genre</p>
        <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Update</a><br />
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a><br />
        <a class="btn btn-primary" asp-area="" asp-controller="Movies" asp-action="Index">Go Back</a>
       
         @*<a class="btn btn-primary" asp-area="" asp-controller="Movies" asp-action="Rent">Rent</a>*@
        <a class="btn btn-primary" asp-action="Rent" asp-route-id="@Model.Id">Renting</a><br />



        @* <a href="#" class="btn btn-primary">Go somewhere</a>*@
    </div>
</div>