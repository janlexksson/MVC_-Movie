@model Customer

<h1>Do you want to Delete this Customer</h1>

<table class="table">
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Address</td>
        <td>Telephone</td>
        <td>Delete</td>
    </tr>
    <tr>
        <td>
            Id: @Model.Id<br />
        </td>
        <td>
            Name: @Model.Name<br />
        </td>
        <td>
            Address: @Model.Address<br />
        </td>
        <td>
            Phone: @Model.TelefonNumber<br />
        </td>
        <td>
            <form asp-action="DeleteYes">
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="submit" value="Delete Customer" />
            </form>
        </td>
    </tr>
</table>

<a class="btn btn-primary" asp-area="" asp-controller="Customers" asp-action="Index">Go Back</a>
